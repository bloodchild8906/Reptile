<MNavigationDrawer Permanent Class="rounded-4" Width="300" Style="overflow: visible;">
    <MButton Class="ma-6 rounded-pill" Style="width:-webkit-fill-available;" Dark Color="primary" OnClick="() => visible = true">Add Task</MButton>
    <MList Routable Dense Class="remover-ripple">
        <WebScraperItem Href="/app/WebScraper/Pending" Icon="mdi-email-outline" Title="Pending"></WebScraperItem>
        <WebScraperItem Href="/app/WebScraper/Uploading" Icon="mdi-star-outline" Title="Uploading"></WebScraperItem>
        <WebScraperItem Href="/app/WebScraper/completed" Icon="mdi-check" Title="Completed"></WebScraperItem>
    </MList>
</MNavigationDrawer>

<WebScraperDetail @bind-Value="visible" SelectItem=null></WebScraperDetail>

@code {
    bool? visible;
}